{
  "name": "huxley-ui",
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@typescript-eslint/parser": "8.54.0",
    "eslint": "9.39.2",
    "eslint-plugin-better-tailwindcss": "4.1.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0"
  },
  "private": true,
  "scripts": {
    "dev": "bun run --filter=@huxley-ui/docs dev",
    "build": "bun run --filter=* build",
    "lint": "biome lint packages apps/docs/app apps/docs/lib",
    "lint:tw": "eslint --fix packages/ui apps/docs",
    "format": "biome format --write packages apps/docs/app apps/docs/lib",
    "check": "biome check --write packages apps/docs/app apps/docs/lib && bun run lint:tw"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@phosphor-icons/react": "2.1.10"
  }
}
